{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="col-md-2">
        <b>Activité</b>
        <div class="mt-3">
            {{ form_start(form) }}
                {{ form_widget(form) }}
                <input type="submit" class="mt-3 btn btn-primary btn-sm">
            {{ form_end(form) }}
        </div>
    </div>
    <div class="col-md-10">
        <div class="card">
            <div class="card-header">
                Pilulier du jour
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <p><b>Matin</b></p>
                        <div>
                            {% for pill in pillsMorning %}
                                <p>{{ pill.quantity }} x {{ pill.drug }}</p>
                            {% else %}
                                <p>aucun médicament</p>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="col-md-4">
                        <p><b>Midi</b></p>
                        <div>
                            {% for pill in pillsNoon %}
                                <p>{{ pill.quantity }} x {{ pill.drug }}</p>
                            {% else %}
                                <p>aucun médicament</p>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="col-md-4">
                        <p><b>Soir</b></p>
                        <div>
                            {% for pill in pillsNight %}
                                <p>{{ pill.quantity }} x {{ pill.drug }}</p>
                            {% else %}
                                <p>aucun médicament</p>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
