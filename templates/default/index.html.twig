{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="col-md-2">
        <b>Activité</b>
        <div class="mt-3">
            {{ form_start(form) }}
                {{ form_widget(form) }}
                <input type="submit" class="mt-3 btn btn-primary btn-sm">
            {{ form_end(form) }}
        </div>
    </div>
    <div class="col-md-10">
        <div class="mb-2">
            <a class="nav-link float-right" href="{{ path('app_pill') }}">Voir pilulier de la semaine</a>
        </div>

        <div class="card">
            <div class="card-header">
                <b>Pilulier du jour</b>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <p><b>Matin</b></p>
                        <div>
                            {% for pill in pillsMorning %}
                                <p>{{ pill.quantity }} x {{ pill.drug }}</p>
                            {% else %}
                                <p>aucun médicament prescris</p>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="col-md-4">
                        <p><b>Midi</b></p>
                        <div>
                            {% for pill in pillsNoon %}
                                <p>{{ pill.quantity }} x {{ pill.drug }}</p>
                            {% else %}
                                <p>aucun médicament prescris</p>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="col-md-4">
                        <p><b>Soir</b></p>
                        <div>
                            {% for pill in pillsNight %}
                                <p>{{ pill.quantity }} x {{ pill.drug }}</p>
                            {% else %}
                                <p>aucun médicament prescris</p>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-10">
                <div class="card">
                    <div class="card-header">
                        <b>Activité du jour</b>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-2">
                                <div>Douleur</div>
                                <span>{{ activity.pain ?? 0 }}</span>
                            </div>
                            <div class="col-md-2">
                                <div>Blocage</div>
                                <span>{{ activity.blocked ?? 0}}</span>
                            </div>
                            <div class="col-md-2">
                                <div>Manger</div>
                                <span>{{ activity.eat ?? 0}}</span>
                            </div>
                            <div class="col-md-2">
                                <div>Déplacement</div>
                                <span>{{ activity.move_place ?? 0}}</span>
                            </div>
                            <div class="col-md-2">
                                <div>Toilette</div>
                                <span>{{ activity.toilet ?? 0}}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
