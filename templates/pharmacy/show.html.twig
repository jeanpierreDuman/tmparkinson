{% extends 'base.html.twig' %}

{% block title %}Pharmacy{% endblock %}

{% block body %}
    <h1>Pharmacy</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pharmacy.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ pharmacy.name }}</td>
            </tr>
        </tbody>
    </table>

    <div>
        {% for pD in pharmacy.pharmacyDrugs %}
            <p>
                Médicament : {{ pD.drug }} <br />
                Quantité : {{ pD.quantity }} <br />
                A préparé : {{ pD.quantityToPrepare }}
            </p>
        {% endfor %}
    </div>



    <a href="{{ path('app_pharmacy_index') }}">back to list</a>

    <a href="{{ path('app_pharmacy_edit', {'id': pharmacy.id}) }}">edit</a>

    {{ include('pharmacy/_delete_form.html.twig') }}
{% endblock %}
